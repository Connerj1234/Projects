generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TopicHistory {
  id        String   @id @default(cuid())
  clientId  String
  topic     String
  payload   String
  source    String
  createdAt DateTime @default(now())

  @@index([clientId, createdAt])
}
